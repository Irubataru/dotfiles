[hub]
  protocol = https
[user]
  name = {{ git_full_name }}
  email = {{ git_email }}
{% if git_signing_key_has_key %}
  signingkey = {{ git_signing_key }}
{% elif git_sign_ssh_key %}
  signingkey = "{{ home_directory }}/.ssh/{{ git_sign_ssh_key }}.pub" 
{% endif %}
[alias]
  exclude = !sh -c 'echo "$1" >> .git/info/exclude' -
  clean-vba = checkout -- **/*.frm **/*.frx
  clone-worktree = !_git_clone_worktree
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = nvim
  pager = delta
[apply]
  whitespace = nowarn
[mergetool]
  keepBackup = false
[difftool]
  prompt = false
[help]
  autocorrect = 1
[push]
  default = simple
[init]
	defaultBranch = main
{% if git_signing_key_has_key or git_sign_ssh_key is not none %}
[commit]
  gpgsign = true
{% endif %}
{% if git_sign_format %}
[gpg]
  format = {{ git_sign_format }} 
{% endif %}
[credential]
	helper = cache --timeout=27000
[rerere]
	enabled = true
[pull]
	ff = only
[delta]
  side-by-side = true
  features = gruvbox-dark
