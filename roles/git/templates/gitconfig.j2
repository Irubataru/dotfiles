[hub]
  protocol = https
[user]
  name = {{ git_full_name }}
  email = {{ git_email }}
{% if git_signing_key_has_key %}
  signingkey = {{ git_signing_key }}
{% endif %}
[alias]
  exclude = !sh -c 'echo "$1" >> .git/info/exclude' -
  clean-vba = checkout -- **/*.frm **/*.frx
  clone-worktree = !_git_clone_worktree
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = nvim
[apply]
  whitespace = nowarn
[mergetool]
  keepBackup = false
[difftool]
  prompt = false
[help]
  autocorrect = 1
[push]
  default = simple
[init]
	defaultBranch = main
[diff]
	external = difft
{% if git_signing_key_has_key %}
[commit]
  gpgsign = true
{% endif %}
